@model IEnumerable<AlquilerCarros.DTO.ClienteCarroAlquilerDTO>

    @{
        ViewData["Title"] = "Alquiler";
    }

    <h1>Alquileres por fecha @ViewData["Fecha"]</h1>

    <form method="get" action="@Url.Action("Alquiler")">
        <label for="fecha">Seleccione la fecha inicial:</label>
        <input type="date" name="fechaInicio"/>
        <label for="fecha">Seleccione la fecha final:</label>
        <input type="date" name="fechaFin" />
        <button type="submit">Buscar</button>
    </form>

@if(Model!=null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Tiempo</th>
                <th>Saldo</th>
                <th>Placa</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cedula</td>
                    <td>@item.Nombre</td>
                    <td>@item.FechaInicio</td>
                    <td>@item.FechaFin</td>
                    <td>@item.Tiempo</td>
                    <td>@item.Saldo</td>
                    <td>@item.Placa</td>
                    <td>@item.Marca</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron alquileres para la fecha proporcionada.</p>
}